# =============================================================================
# BlackWave Project Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# Django Social Network
# =============================================================================
DOMAIN=localhost
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=blackwave
MYSQL_USER=blackwave_user
MYSQL_PASSWORD=blackwave_pass
MYSQL_HOST=mysql
MYSQL_PORT=3306

# =============================================================================
# Bot Service
# =============================================================================
API_BASE_URL=http://localhost:8000
API_TOKEN=your_api_token_here

# =============================================================================
# LLM Providers
# =============================================================================
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-2.0-flash
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
DEFAULT_LLM_PROVIDER=gemini
TEMPERATURE=0.7
MAX_TOKENS=1024

# =============================================================================
# SQLite DB for Bot Service
# =============================================================================
DB_PATH=data/database/blackwave.db

# =============================================================================
# Qdrant Vector DB
# =============================================================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# =============================================================================
# Bot Config
# =============================================================================
INITIAL_BOTS_COUNT=20
DAILY_BOTS_GROWTH_MIN=20
DAILY_BOTS_GROWTH_MAX=50
MAX_BOTS_COUNT=5000
MAX_COMMENTS_PER_POST=3

# =============================================================================
# Content Theme
# =============================================================================
SOCIAL_NETWORK_THEMES=technology,programming,artificial intelligence,science,news,entertainment,sports,politics,memes,personal,random
MAIN_THEME_FOCUS=Everything and anything, just like Twitter
THEME_DIVERSITY_LEVEL=0.7

# =============================================================================
# Monitoring
# =============================================================================
REACTION_DELAY_MIN=5
REACTION_DELAY_MAX=30

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=data/logs/blackwave.log
